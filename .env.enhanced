# iTechSmart Supreme - Enhanced Configuration
# Complete configuration with all features enabled

# ============================================================================
# CORE SETTINGS
# ============================================================================
MASTER_PASSWORD=change_me_in_production_use_strong_password
SECRET_KEY=change_me_use_random_32_char_string
CREDENTIALS_PATH=credentials.enc

# ============================================================================
# MULTI-AI PROVIDER SETTINGS
# ============================================================================
# Primary AI provider (openai, gemini, claude, azure_openai, ollama, offline)
PRIMARY_AI_PROVIDER=gemini

# Fallback chain (comma-separated, in order of preference)
AI_FALLBACK_CHAIN=gemini,openai,claude,ollama,offline

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# Anthropic Claude Configuration
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-opus-20240229

# Azure OpenAI Configuration
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_VERSION=2024-02-15-preview

# Ollama (Local LLM)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ============================================================================
# ZERO TRUST SECURITY
# ============================================================================
ZERO_TRUST_ENABLED=true
REQUIRE_MFA=true
SESSION_TIMEOUT=3600
RISK_THRESHOLD=70
JWT_SECRET=your-jwt-secret-min-32-characters

# MFA Settings
MFA_METHODS=totp,sms,email
TOTP_ISSUER=iTechSmart Supreme

# ============================================================================
# AUTOMATION SETTINGS
# ============================================================================
AUTO_REMEDIATION=false
REQUIRE_APPROVAL_HIGH_RISK=true
ENABLE_WORKFLOWS=true
WORKFLOW_TIMEOUT=3600

# ============================================================================
# MONITORING ENDPOINTS
# ============================================================================
# Prometheus
PROMETHEUS_ENDPOINTS=http://prometheus:9090

# Wazuh
WAZUH_ENDPOINTS=https://wazuh:55000:admin:SecurePassword123

# Zabbix
ZABBIX_URL=http://zabbix-web:80/zabbix
ZABBIX_USERNAME=Admin
ZABBIX_PASSWORD=zabbix

# Grafana
GRAFANA_URL=http://grafana:3000
GRAFANA_API_KEY=your-grafana-api-key

# ============================================================================
# INTEGRATED TOOLS
# ============================================================================
# Ansible
ANSIBLE_INVENTORY=/etc/ansible/hosts
ANSIBLE_VAULT_PASSWORD=your-ansible-vault-password

# SaltStack
SALT_MASTER_URL=salt://master

# HashiCorp Vault
VAULT_URL=http://vault:8200
VAULT_TOKEN=your-vault-token
VAULT_NAMESPACE=itechsmart

# ============================================================================
# NOTIFICATION CHANNELS
# ============================================================================
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#itechsmart-alerts

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=itechsmart@yourdomain.com
EMAIL_RECIPIENTS=admin@yourdomain.com,ops@yourdomain.com

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# PagerDuty
PAGERDUTY_API_KEY=your-pagerduty-integration-key
PAGERDUTY_SERVICE_ID=your-service-id

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBERS=+1234567890,+0987654321

# ============================================================================
# WEBHOOK SECRETS
# ============================================================================
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
PROMETHEUS_WEBHOOK_SECRET=your-prometheus-webhook-secret
CUSTOM_WEBHOOK_SECRET=your-custom-webhook-secret

# ============================================================================
# TICKETING SYSTEMS
# ============================================================================
# Jira
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@domain.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=OPS

# ServiceNow
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=admin
SERVICENOW_PASSWORD=your-password

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/itechsmart
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# SERVER SETTINGS
# ============================================================================
HOST=0.0.0.0
PORT=5000
DEBUG=false
LOG_LEVEL=INFO

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
CACHE_ENABLED=true
CACHE_TTL=300

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# CORS
CORS_ENABLED=true
CORS_ORIGINS=https://yourdomain.com,https://dashboard.yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# COMPLIANCE & AUDIT
# ============================================================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=/var/log/itechsmart/audit.log
COMPLIANCE_MODE=SOC2
RETENTION_DAYS=365

# ============================================================================
# BACKUP SETTINGS
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backup/itechsmart

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_MULTI_AI=true
ENABLE_ZERO_TRUST=true
ENABLE_WORKFLOWS=true
ENABLE_NOTIFICATIONS=true
ENABLE_INTEGRATIONS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_SELF_HEALING=true

# ============================================================================
# ADVANCED FEATURES
# ============================================================================
# Machine Learning
ML_ENABLED=false
ML_MODEL_PATH=/models/itechsmart

# Predictive Analytics
PREDICTIVE_ANALYTICS_ENABLED=false
PREDICTION_WINDOW_HOURS=24

# Auto-Scaling
AUTO_SCALING_ENABLED=false
MIN_INSTANCES=2
MAX_INSTANCES=10

# ============================================================================
# DEVELOPMENT SETTINGS (Remove in production)
# ============================================================================
# DEV_MODE=false
# MOCK_EXTERNAL_SERVICES=false
# ENABLE_PROFILING=false