# iTechSmart Supreme - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# AI PROVIDERS
# ============================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google
GOOGLE_API_KEY=your_google_api_key_here

# Ollama
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# INTEGRATIONS
# ============================================
# Ansible
ANSIBLE_HOST=localhost
ANSIBLE_USER=ansible
ANSIBLE_SSH_KEY=/path/to/ssh/key

# SaltStack
SALT_API_URL=https://salt-master:8000
SALT_API_TOKEN=your_salt_token_here

# HashiCorp Vault
VAULT_ADDR=https://vault.example.com:8200
VAULT_TOKEN=your_vault_token_here

# Zabbix
ZABBIX_URL=https://zabbix.example.com
ZABBIX_USER=Admin
ZABBIX_PASSWORD=your_zabbix_password

# Grafana
GRAFANA_URL=https://grafana.example.com
GRAFANA_API_KEY=your_grafana_api_key

# ============================================
# MONITORING
# ============================================
# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Wazuh
WAZUH_API_URL=https://wazuh.example.com:55000
WAZUH_API_USER=wazuh
WAZUH_API_PASSWORD=your_wazuh_password

# ============================================
# NOTIFICATIONS
# ============================================
# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=supreme@itechsmart.com

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#alerts

# PagerDuty
PAGERDUTY_API_KEY=your_pagerduty_api_key
PAGERDUTY_SERVICE_ID=your_service_id

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# ============================================
# SECURITY
# ============================================
# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# API Authentication
API_SECRET_KEY=your-api-secret-key-here

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/supreme.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ============================================
# WORKFLOW ENGINE
# ============================================
WORKFLOW_STORAGE_PATH=workflows/
WORKFLOW_MAX_EXECUTION_TIME=3600

# ============================================
# DIAGNOSIS ENGINE
# ============================================
DIAGNOSIS_CACHE_TTL=300
DIAGNOSIS_MAX_RETRIES=3

# ============================================
# GENERAL
# ============================================
DEBUG=false
ENVIRONMENT=production