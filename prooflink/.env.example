# ================================
# iTechSmart ProofLink Configuration
# ================================

# Application
APP_NAME=ProofLink.AI
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://prooflink:prooflink123@localhost:5432/prooflink
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# MCP Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8001
MCP_ENABLE_LOGGING=true

# Cloud Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=prooflink-proofs
AWS_S3_REGION=us-east-1

# Google Drive Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/integrations/google/callback

# Dropbox Integration
DROPBOX_APP_KEY=your-dropbox-app-key
DROPBOX_APP_SECRET=your-dropbox-app-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@prooflink.ai
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@prooflink.ai
SMTP_FROM_NAME=ProofLink.AI

# Stripe Payment
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_MONTHLY_PRICE_ID=price_monthly_1usd
STRIPE_LIFETIME_PRICE_ID=price_lifetime_5usd
STRIPE_YEARLY_PRICE_ID=price_yearly_10usd

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# File Upload
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif,mp4,mp3,zip

# Proof Configuration
PROOF_HASH_ALGORITHM=SHA256
PROOF_SIGNATURE_ALGORITHM=RSA
PROOF_LINK_EXPIRY_DAYS=0  # 0 = never expires
PROOF_STORAGE_RETENTION_DAYS=365

# Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# CDN
CDN_URL=https://cdn.prooflink.ai
CDN_ENABLED=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/prooflink.log

# Feature Flags
ENABLE_AI_VERIFICATION=true
ENABLE_BATCH_PROCESSING=true
ENABLE_API_ACCESS=true
ENABLE_WEBHOOKS=true
ENABLE_CUSTOM_BRANDING=false

# Free Tier Limits
FREE_TIER_PROOFS_PER_MONTH=10
FREE_TIER_FILE_SIZE_MB=10
FREE_TIER_API_CALLS_PER_DAY=100

# Premium Tier Limits
PREMIUM_TIER_PROOFS_PER_MONTH=unlimited
PREMIUM_TIER_FILE_SIZE_MB=100
PREMIUM_TIER_API_CALLS_PER_DAY=10000