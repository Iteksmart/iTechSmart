# ProofLink.AI Production Environment Configuration
# Copy this file to .env and update with your production values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://prooflink:CHANGE_THIS_PASSWORD@postgres:5432/prooflink
POSTGRES_DB=prooflink
POSTGRES_USER=prooflink
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://:CHANGE_THIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================
# JWT CONFIGURATION
# ============================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# API CONFIGURATION
# ============================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=ProofLink.AI
BACKEND_CORS_ORIGINS=["https://prooflink.ai","https://www.prooflink.ai"]

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=104857600

# ============================================
# STRIPE CONFIGURATION (Optional)
# ============================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_price_id

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@prooflink.ai

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# FRONTEND CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=https://api.prooflink.ai/api/v1
NEXT_PUBLIC_APP_NAME=ProofLink.AI
NEXT_PUBLIC_APP_URL=https://prooflink.ai
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# ============================================
# SECURITY
# ============================================
ALLOWED_HOSTS=prooflink.ai,www.prooflink.ai,api.prooflink.ai
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true