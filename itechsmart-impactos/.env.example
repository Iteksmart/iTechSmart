# iTechSmart ImpactOS - Environment Configuration

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
APP_NAME=iTechSmart ImpactOS
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
MCP_SERVER_URL=http://localhost:8001

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/impactos
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# ============================================
# AUTHENTICATION - GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# ============================================
# AI MODEL CONFIGURATION
# ============================================

# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000

# Google Gemini
GOOGLE_AI_API_KEY=your_google_ai_api_key
GOOGLE_AI_MODEL=gemini-pro

# Local Models (Ollama)
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Default AI Provider (openai, anthropic, google, ollama)
DEFAULT_AI_PROVIDER=openai

# ============================================
# MCP SERVER CONFIGURATION
# ============================================
MCP_SERVER_PORT=8001
MCP_SERVER_SECRET=your_mcp_server_secret_key

# Vault Configuration (for storing API keys securely)
VAULT_ENCRYPTION_KEY=your_32_character_encryption_key_here_change_this

# ============================================
# CONNECTOR CONFIGURATIONS
# ============================================

# Google Sheets
GOOGLE_SHEETS_ENABLED=true
GOOGLE_SHEETS_CLIENT_ID=your_google_sheets_client_id
GOOGLE_SHEETS_CLIENT_SECRET=your_google_sheets_client_secret

# Stripe
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Mailchimp
MAILCHIMP_ENABLED=true
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us1

# Salesforce
SALESFORCE_ENABLED=true
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_REDIRECT_URI=http://localhost:3000/connectors/salesforce/callback

# QuickBooks
QUICKBOOKS_ENABLED=true
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/connectors/quickbooks/callback

# Bloomerang
BLOOMERANG_ENABLED=true
BLOOMERANG_API_KEY=your_bloomerang_api_key

# Donorbox
DONORBOX_ENABLED=true
DONORBOX_API_KEY=your_donorbox_api_key

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@itechsmart.dev
EMAIL_FROM_NAME=iTechSmart ImpactOS

# ============================================
# FILE STORAGE
# ============================================
# Storage Provider (local, s3, gcs)
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=impactos-uploads

# Google Cloud Storage (if using GCS)
GCS_PROJECT_ID=your_gcs_project_id
GCS_BUCKET=impactos-uploads
GCS_KEYFILE_PATH=./gcs-keyfile.json

# ============================================
# PDF GENERATION
# ============================================
PDF_GENERATOR=puppeteer
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# ============================================
# EVIDENCE LEDGER & BLOCKCHAIN
# ============================================
EVIDENCE_LEDGER_ENABLED=true
BLOCKCHAIN_ANCHORING_ENABLED=false
BLOCKCHAIN_PROVIDER=ethereum
BLOCKCHAIN_NETWORK=sepolia
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/your_infura_key
BLOCKCHAIN_PRIVATE_KEY=your_private_key_for_anchoring

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# MONITORING & ANALYTICS
# ============================================
# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENABLED=false

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX
GA_ENABLED=false

# PostHog (Product Analytics)
POSTHOG_API_KEY=your_posthog_api_key
POSTHOG_HOST=https://app.posthog.com
POSTHOG_ENABLED=false

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_MARKETPLACE_ENABLED=true
FEATURE_WHITE_LABEL_ENABLED=true
FEATURE_BLOCKCHAIN_ANCHORING_ENABLED=false
FEATURE_VIDEO_GENERATION_ENABLED=true
FEATURE_AB_TESTING_ENABLED=true

# ============================================
# SECURITY
# ============================================
# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your_session_secret_key_change_this
SESSION_MAX_AGE=86400000

# Content Security Policy
CSP_ENABLED=true

# ============================================
# COMPLIANCE
# ============================================
# Data Retention (days)
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555

# PII Redaction
PII_REDACTION_ENABLED=true
PII_REDACTION_PATTERNS=ssn,email,phone

# GDPR
GDPR_ENABLED=true
GDPR_DATA_EXPORT_ENABLED=true
GDPR_RIGHT_TO_DELETION_ENABLED=true

# ============================================
# PRICING & BILLING
# ============================================
# Free Tier Limits
FREE_TIER_REPORTS_PER_MONTH=50
FREE_TIER_CONNECTORS_MAX=3
FREE_TIER_STORAGE_MB=1000

# Paid Tier Pricing
FOUNDATION_TIER_PRICE_ANNUAL=3000
ENTERPRISE_TIER_PRICE_ANNUAL=25000

# ============================================
# WEBHOOKS
# ============================================
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT_MS=5000

# ============================================
# CRON JOBS
# ============================================
CRON_ENABLED=true
CRON_REPORT_GENERATION=0 2 * * *
CRON_DATA_CLEANUP=0 3 * * 0
CRON_EVIDENCE_ANCHORING=0 4 * * *

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
LOG_LEVEL=info
PRETTY_LOGS=true

# ============================================
# DEPLOYMENT
# ============================================
# Vercel
VERCEL_URL=
VERCEL_ENV=development

# Firebase
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_EMAIL=admin@itechsmart.dev
ADMIN_PASSWORD=change_this_secure_password
ADMIN_DASHBOARD_ENABLED=true

# ============================================
# SUPPORT & CONTACT
# ============================================
SUPPORT_EMAIL=support@itechsmart.dev
SALES_EMAIL=sales@itechsmart.dev
CONTACT_PHONE=+1-555-123-4567