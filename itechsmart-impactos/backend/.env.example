# iTechSmart ImpactOS Backend Configuration

# Application
APP_NAME=iTechSmart ImpactOS
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Database
DATABASE_URL=postgresql+asyncpg://impactos:impactos123@localhost:5432/impactos
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=["pdf","jpg","jpeg","png","doc","docx","xls","xlsx","csv"]

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@impactos.ai
SMTP_FROM_NAME=iTechSmart ImpactOS

# AI Models
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# MCP Server
MCP_ENABLED=true
MCP_TOOLS_ENABLED=true
MCP_RESOURCES_ENABLED=true
MCP_PROMPTS_ENABLED=true

# Report Generation
REPORT_TEMPLATES_DIR=./templates/reports
REPORT_OUTPUT_DIR=./outputs/reports
PDF_GENERATION_TIMEOUT=60

# Grant Database
GRANT_DATABASE_API_KEY=your-grant-api-key
GRANT_DATABASE_URL=https://api.grants.gov

# Partner Matching
PARTNER_MATCHING_ENABLED=true
PARTNER_MATCHING_THRESHOLD=0.7

# Analytics
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Integrations
GOOGLE_ANALYTICS_API_KEY=your-ga-api-key
MAILCHIMP_API_KEY=your-mailchimp-api-key
SLACK_WEBHOOK_URL=your-slack-webhook-url
STRIPE_SECRET_KEY=your-stripe-secret-key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false
ENABLE_API_KEYS=true
ENABLE_WEBHOOKS=true

# Subscription & Billing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
SUBSCRIPTION_PRICE_ID=price_your_price_id
TRIAL_PERIOD_DAYS=14