# Ultra-optimized build for iTechSmart itechsmart-copilot Backend
# Strategy: Install only essential dependencies, skip heavy ML libraries initially

FROM python:3.11-slim as builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Install ONLY the essential dependencies first (skip heavy ML libs)
# This allows the backend to at least build and run
RUN pip install --no-cache-dir --user \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    python-multipart==0.0.6 \
    sqlalchemy==2.0.23 \
    psycopg2-binary==2.9.9 \
    alembic==1.12.1 \
    python-jose[cryptography]==3.3.0 \
    passlib[bcrypt]==1.7.4 \
    python-dotenv==1.0.0 \
    pydantic[email]==2.5.0 \
    pypdf2==3.0.1 \
    python-docx==1.1.0 \
    markdown==3.5.1 \
    beautifulsoup4==4.12.2 \
    redis==5.0.1 \
    celery==5.3.4 \
    httpx==0.25.2 \
    pydantic-settings==2.1.0

# Install lightweight AI libraries (skip heavy ones for now)
RUN pip install --no-cache-dir --user \
    openai==1.3.7 \
    anthropic==0.7.7 \
    google-generativeai==0.3.1 \
    tiktoken==0.5.2

# Production stage
FROM python:3.11-slim

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    libpq5 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy Python dependencies from builder
COPY --from=builder /root/.local /root/.local

# Make sure scripts in .local are usable
ENV PATH=/root/.local/bin:$PATH

# Copy application code
COPY backend/ .

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]