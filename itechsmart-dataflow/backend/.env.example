# Application Settings
APP_NAME=iTechSmart DataFlow
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Settings
API_V1_PREFIX=/api/v1

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true

# Database Settings
DATABASE_URL=postgresql+asyncpg://dataflow:password@postgres:5432/dataflow
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# MongoDB Settings
MONGODB_URL=mongodb://mongo:27017
MONGODB_DATABASE=dataflow

# Redis Settings
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# Kafka Settings
KAFKA_BOOTSTRAP_SERVERS=["kafka:9092"]
KAFKA_CONSUMER_GROUP=dataflow-consumers

# RabbitMQ Settings
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Storage Settings
S3_BUCKET=dataflow-storage
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# MinIO Settings
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=dataflow

# Authentication Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Integration Settings
PASSPORT_API_URL=http://passport:8001/api/v1
PASSPORT_API_KEY=

ENTERPRISE_HUB_URL=http://enterprise-hub:8002/api/v1
ENTERPRISE_HUB_API_KEY=

NINJA_API_URL=http://ninja:8003/api/v1
NINJA_API_KEY=

IMPACTOS_API_URL=http://impactos:8004/api/v1
IMPACTOS_API_KEY=

HL7_API_URL=http://hl7:8005/api/v1
HL7_API_KEY=

# Pipeline Settings
MAX_CONCURRENT_PIPELINES=10
PIPELINE_TIMEOUT_SECONDS=3600
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=60

# Data Quality Settings
ENABLE_DATA_QUALITY=true
QUALITY_CHECK_SAMPLE_SIZE=1000

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json