# iTechSmart HL7 Frontend Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Application
NEXT_PUBLIC_APP_NAME=iTechSmart HL7
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_SESSION_TIMEOUT=1800000

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true

# WebSocket
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# HL7 Features
NEXT_PUBLIC_HL7_VERSION=2.5
NEXT_PUBLIC_FHIR_VERSION=R4
NEXT_PUBLIC_ENABLE_HL7_PARSER=true
NEXT_PUBLIC_ENABLE_FHIR_CONVERTER=true

# Clinical Features
NEXT_PUBLIC_ENABLE_CDS=true
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=true
NEXT_PUBLIC_ENABLE_DRUG_INTERACTION_CHECK=true
NEXT_PUBLIC_ENABLE_ALLERGY_CHECK=true

# EMR Integrations
NEXT_PUBLIC_EPIC_ENABLED=true
NEXT_PUBLIC_CERNER_ENABLED=true
NEXT_PUBLIC_MEDITECH_ENABLED=true
NEXT_PUBLIC_ALLSCRIPTS_ENABLED=true

# HIPAA Compliance
NEXT_PUBLIC_HIPAA_MODE=true
NEXT_PUBLIC_AUDIT_LOGGING=true
NEXT_PUBLIC_SESSION_RECORDING=false

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_SENTRY_DSN=

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.hl7,.xml,.json

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=25
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Refresh Intervals (milliseconds)
NEXT_PUBLIC_PATIENT_REFRESH_INTERVAL=30000
NEXT_PUBLIC_MESSAGE_REFRESH_INTERVAL=10000
NEXT_PUBLIC_ALERT_REFRESH_INTERVAL=5000