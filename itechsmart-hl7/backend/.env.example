# iTechSmart HL7 Backend Configuration

# Application
APP_NAME=iTechSmart HL7
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Database
DATABASE_URL=postgresql+asyncpg://hl7:hl7123@localhost:5432/hl7
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# HL7 Configuration
HL7_VERSION=2.5
HL7_ENCODING=UTF-8
HL7_SEGMENT_SEPARATOR=\r
HL7_FIELD_SEPARATOR=|
HL7_COMPONENT_SEPARATOR=^
HL7_REPETITION_SEPARATOR=~
HL7_ESCAPE_CHARACTER=\\
HL7_SUBCOMPONENT_SEPARATOR=&

# FHIR Configuration
FHIR_VERSION=R4
FHIR_BASE_URL=http://localhost:8080/fhir

# EMR Integrations
# Epic
EPIC_CLIENT_ID=your-epic-client-id
EPIC_CLIENT_SECRET=your-epic-client-secret
EPIC_FHIR_URL=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4

# Cerner
CERNER_CLIENT_ID=your-cerner-client-id
CERNER_CLIENT_SECRET=your-cerner-client-secret
CERNER_FHIR_URL=https://fhir-myrecord.cerner.com/r4

# Meditech
MEDITECH_HOST=meditech.example.com
MEDITECH_PORT=6661
MEDITECH_USERNAME=your-username
MEDITECH_PASSWORD=your-password

# Allscripts
ALLSCRIPTS_APP_NAME=your-app-name
ALLSCRIPTS_APP_USERNAME=your-username
ALLSCRIPTS_APP_PASSWORD=your-password
ALLSCRIPTS_API_URL=https://unity.allscripts.com

# HIPAA Compliance
HIPAA_ENABLED=true
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
PHI_ENCRYPTION_ENABLED=true
ENCRYPTION_KEY=your-encryption-key-32-bytes-min

# Data Encryption
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY_ROTATION_DAYS=90

# Access Control
RBAC_ENABLED=true
MFA_ENABLED=true
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Clinical Decision Support
CDS_ENABLED=true
DRUG_INTERACTION_CHECK=true
ALLERGY_CHECK=true
LAB_ALERT_THRESHOLD=true

# AI Clinical Insights
AI_INSIGHTS_ENABLED=true
SEPSIS_PREDICTION_ENABLED=true
READMISSION_PREDICTION_ENABLED=true
DETERIORATION_DETECTION_ENABLED=true

# Monitoring & Alerts
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
ALERT_EMAIL=alerts@itechsmart.ai
ALERT_SLACK_WEBHOOK=your-slack-webhook-url

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true
ENABLE_API_KEYS=true
ENABLE_WEBHOOKS=true

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@itechsmart.ai
SMTP_FROM_NAME=iTechSmart HL7