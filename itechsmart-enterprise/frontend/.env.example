# iTechSmart Enterprise Frontend Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Application
NEXT_PUBLIC_APP_NAME=iTechSmart Enterprise
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Tenant Configuration
NEXT_PUBLIC_TENANT_MODE=multi
NEXT_PUBLIC_DEFAULT_TENANT=demo

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_SSO_ENABLED=true
NEXT_PUBLIC_SESSION_TIMEOUT=1800000

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_CUSTOM_BRANDING=true

# WebSocket
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_SENTRY_DSN=

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=104857600
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.txt,.jpg,.png

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=25
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Integrations
NEXT_PUBLIC_JIRA_ENABLED=true
NEXT_PUBLIC_SERVICENOW_ENABLED=true
NEXT_PUBLIC_SLACK_ENABLED=true
NEXT_PUBLIC_TEAMS_ENABLED=true