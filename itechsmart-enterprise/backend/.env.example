# iTechSmart Enterprise Backend Configuration

# Application
APP_NAME=iTechSmart Enterprise
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Database
DATABASE_URL=postgresql+asyncpg://enterprise:enterprise123@localhost:5432/enterprise
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# SAML SSO
SAML_ENABLED=true
SAML_ENTITY_ID=https://enterprise.itechsmart.ai
SAML_ACS_URL=https://enterprise.itechsmart.ai/api/v1/auth/saml/acs
SAML_IDP_METADATA_URL=https://idp.example.com/metadata

# LDAP/Active Directory
LDAP_ENABLED=false
LDAP_SERVER=ldap://ldap.example.com
LDAP_PORT=389
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=admin-password

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=["pdf","jpg","jpeg","png","doc","docx","xls","xlsx","csv"]

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@itechsmart.ai
SMTP_FROM_NAME=iTechSmart Enterprise

# AI Models
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Multi-Tenancy
MULTI_TENANT_ENABLED=true
DEFAULT_TENANT_PLAN=enterprise
MAX_USERS_PER_TENANT=1000

# Compliance & Security
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=2555
ENCRYPTION_AT_REST=true
ENCRYPTION_KEY=your-encryption-key-32-bytes-min

# Integrations
JIRA_API_URL=https://your-domain.atlassian.net
JIRA_API_TOKEN=your-jira-api-token
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=your-username
SERVICENOW_PASSWORD=your-password
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url

# Monitoring & Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true
ENABLE_API_KEYS=true
ENABLE_WEBHOOKS=true
ENABLE_CUSTOM_BRANDING=true

# Subscription & Billing
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
ENTERPRISE_PRICE_ID=price_your_enterprise_price_id