# iTechSmart Enterprise Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=iTechSmart Enterprise
APP_ENV=production
APP_VERSION=1.0.0
SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://itechsmart:itechsmart@postgres:5432/itechsmart
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=itechsmart
POSTGRES_USER=itechsmart
POSTGRES_PASSWORD=change-this-password-in-production

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# Admin User
ADMIN_EMAIL=admin@itechsmart.dev
ADMIN_PASSWORD=admin123

# AI API Keys (Optional)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ServiceNow Integration (Optional)
SERVICENOW_INSTANCE_URL=https://your-instance.service-now.com
SERVICENOW_CLIENT_ID=your_servicenow_client_id
SERVICENOW_CLIENT_SECRET=your_servicenow_client_secret
SERVICENOW_USERNAME=integration_user
SERVICENOW_PASSWORD=secure_password

# Zendesk Integration (Optional)
ZENDESK_SUBDOMAIN=your-company
ZENDESK_EMAIL=api@your-company.com
ZENDESK_API_TOKEN=your_zendesk_api_token

# IT Glue Integration (Optional)
ITGLUE_API_URL=https://api.itglue.com
ITGLUE_API_KEY=your_itglue_api_key

# N-able Integration (Optional)
NABLE_SERVER_URL=https://your-server.n-able.com
NABLE_JWT_TOKEN=your_nable_jwt_token
NABLE_CLIENT_ID=your_client_id

# ConnectWise Integration (Optional)
CONNECTWISE_SITE_URL=https://api-na.myconnectwise.net
CONNECTWISE_COMPANY_ID=your_company_id
CONNECTWISE_PUBLIC_KEY=your_public_key
CONNECTWISE_PRIVATE_KEY=your_private_key

# SAP Integration (Optional - Beta)
SAP_SYSTEM_ID=your_system_id
SAP_CLIENT=your_client
SAP_USERNAME=your_username
SAP_PASSWORD=your_password
SAP_HOST=your_sap_host

# Salesforce Integration (Optional - Beta)
SALESFORCE_INSTANCE_URL=https://your-company.salesforce.com
SALESFORCE_CLIENT_ID=your_client_id
SALESFORCE_CLIENT_SECRET=your_client_secret
SALESFORCE_USERNAME=your_username
SALESFORCE_PASSWORD=your_password
SALESFORCE_SECURITY_TOKEN=your_security_token

# Workday Integration (Optional - Beta)
WORKDAY_TENANT_URL=https://your-company.workday.com
WORKDAY_USERNAME=your_username
WORKDAY_PASSWORD=your_password

# Jira Integration (Optional)
JIRA_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your_jira_api_token

# Slack Integration (Optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Microsoft Teams Integration (Optional)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR_WEBHOOK_URL

# Prometheus Integration
PROMETHEUS_URL=http://prometheus:9090
PROMETHEUS_BEARER_TOKEN=

# Wazuh Integration (Optional)
WAZUH_API_URL=https://your-wazuh-server:55000
WAZUH_API_USER=wazuh_admin
WAZUH_API_PASSWORD=your_wazuh_password
WAZUH_API_KEY=your_wazuh_api_key

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=change-this-password
PROMETHEUS_RETENTION=15d

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@itechsmart.com

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=itechsmart-uploads

# Security Settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_EXPIRATION=86400
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
# License Server Integration
LICENSE_SERVER_URL=http://localhost:3000
