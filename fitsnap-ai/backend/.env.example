# FitSnap.AI Backend Configuration

# Application
APP_NAME=FitSnap.AI
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Database
DATABASE_URL=postgresql+asyncpg://fitsnap:fitsnap123@localhost:5432/fitsnap
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["jpg","jpeg","png","webp"]
PHOTO_AUTO_DELETE_SECONDS=60

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=1000

# Fashion APIs
AMAZON_AFFILIATE_ID=your-amazon-affiliate-id
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key

ASOS_API_KEY=your-asos-api-key
SHOPSTYLE_API_KEY=your-shopstyle-api-key

# Pinterest API
PINTEREST_ACCESS_TOKEN=your-pinterest-token

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_BASIC_PRICE_ID=price_basic_1_dollar
STRIPE_PRO_PRICE_ID=price_pro_3_dollar

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@fitsnap.ai
SMTP_FROM_NAME=FitSnap.AI

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_FREE_SCAN=true
ENABLE_AFFILIATE_LINKS=true
ENABLE_AI_CHAT=true

# AI Configuration
AI_STYLE_SCORE_ENABLED=true
AI_COLOR_HARMONY_ENABLED=true
AI_TREND_MATCH_ENABLED=true
AI_MAKEUP_ANALYSIS_ENABLED=true
AI_HAIR_ANALYSIS_ENABLED=true

# Privacy
PHOTO_ENCRYPTION_ENABLED=true
PHOTO_AUTO_DELETE_ENABLED=true