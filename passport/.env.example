# iTechSmart PassPort - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://passport:your_password_here@localhost:5432/passport
POSTGRES_DB=passport
POSTGRES_USER=passport
POSTGRES_PASSWORD=your_password_here

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://:your_redis_password@localhost:6379/0
REDIS_PASSWORD=your_redis_password

# ============================================
# JWT CONFIGURATION
# ============================================
SECRET_KEY=your-secret-key-change-this-to-random-32-char-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# API CONFIGURATION
# ============================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=iTechSmart PassPort
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============================================
# ENCRYPTION CONFIGURATION
# ============================================
MASTER_KEY=your-master-encryption-key-32-chars-min
ENCRYPTION_ALGORITHM=AES256

# ============================================
# 2FA CONFIGURATION
# ============================================
TOTP_ISSUER=iTechSmart PassPort
TOTP_DIGITS=6
TOTP_PERIOD=30

# ============================================
# BREACH DETECTION
# ============================================
HIBP_API_KEY=your_have_i_been_pwned_api_key

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@itechsmart.com

# ============================================
# STRIPE CONFIGURATION (Optional)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_price_id

# ============================================
# FRONTEND CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_NAME=iTechSmart PassPort
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# SECURITY
# ============================================
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/passport.log

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
TESTING=false