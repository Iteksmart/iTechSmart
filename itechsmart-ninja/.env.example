# iTechSmart Ninja - Founder Environment Configuration

# ============================================
# FOUNDER PERSONAL SETTINGS
# ============================================
FOUNDER_EMAIL=founder@itechsmart.com
FOUNDER_NAME=iTechSmart Founder
ENVIRONMENT=production

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql+asyncpg://ninja:ninja123@postgres:5432/ninja
POSTGRES_USER=ninja
POSTGRES_PASSWORD=ninja123
POSTGRES_DB=ninja

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
# IMPORTANT: Change these in production!
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_SECRET_KEY=change-this-to-a-random-jwt-secret-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ============================================
# AI PROVIDER API KEYS
# ============================================
# OpenAI (GPT-4, GPT-3.5, DALL-E, Whisper)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google (Gemini, Vision)
GOOGLE_API_KEY=your_google_api_key_here

# ============================================
# CLOUD PROVIDER CREDENTIALS (Optional)
# ============================================
# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Google Cloud
GCP_PROJECT_ID=your_gcp_project_id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# Azure
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# ============================================
# INTEGRATION API KEYS (Optional)
# ============================================
# GitHub
GITHUB_TOKEN=your_github_personal_access_token

# Slack
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Google Drive
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret

# Jira
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your_email@example.com
JIRA_API_TOKEN=your_jira_api_token

# Gmail
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# ============================================
# APPLICATION SETTINGS
# ============================================
# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=iTechSmart Ninja
VERSION=1.0.0

# CORS Settings (for frontend)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# File Upload Settings
MAX_UPLOAD_SIZE=104857600
UPLOAD_DIR=./uploads

# ============================================
# SANDBOX & VM SETTINGS
# ============================================
# Sandbox Configuration
SANDBOX_TIMEOUT=300
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_LIMIT=1.0

# VM Configuration
VM_DEFAULT_SIZE=small
VM_DEFAULT_REGION=us-east-1
VM_AUTO_SHUTDOWN_HOURS=24

# ============================================
# PERFORMANCE & SCALING
# ============================================
# Worker Configuration
WORKERS=2
MAX_WORKERS=4

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/ninja.log
ENABLE_METRICS=true

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SANDBOX=true
ENABLE_VMS=true
ENABLE_VISION=true
ENABLE_WORKFLOWS=true
ENABLE_PLUGINS=true
ENABLE_INTEGRATIONS=true

# ============================================
# DEVELOPMENT SETTINGS (Optional)
# ============================================
DEBUG=false
RELOAD=false
# License Server Integration
LICENSE_SERVER_URL=http://localhost:3000
