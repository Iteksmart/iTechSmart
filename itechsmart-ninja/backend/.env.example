# Application Settings
APP_NAME=iTechSmart Ninja
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# API Settings
API_V1_PREFIX=/api/v1
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql://ninja:ninja_password@localhost:5432/ninja_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Admin Account (Created on first run)
ADMIN_EMAIL=admin@itechsmart.ninja
ADMIN_PASSWORD=change-this-password

# AI Provider API Keys (Optional - can be configured via admin dashboard)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
DEEPSEEK_API_KEY=

# Ollama Configuration (for local AI)
OLLAMA_BASE_URL=http://localhost:11434

# File Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads

# Deployment Settings
DEPLOY_DIR=deployments

# AWS Configuration (for S3 deployments)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Vercel Configuration
VERCEL_TOKEN=

# Netlify Configuration
NETLIFY_TOKEN=

# GitHub Configuration
GITHUB_TOKEN=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Docker VM Settings
DOCKER_TIMEOUT=300
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_LIMIT=1.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Settings
SESSION_TIMEOUT_MINUTES=60
MAX_SESSIONS_PER_USER=5

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_FILE_UPLOAD=true
ENABLE_DEPLOYMENTS=true
ENABLE_GAMIFICATION=true
# Web Search APIs (Optional - for Feature 2)
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here
BING_SEARCH_API_KEY=your_bing_api_key_here
