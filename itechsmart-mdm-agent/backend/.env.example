# Database Configuration
DATABASE_URL=sqlite:///./mdm_agent.db
# For PostgreSQL: postgresql://user:password@localhost:5432/mdm_agent

# Service Configuration
SERVICE_NAME=itechsmart-mdm-agent
SERVICE_PORT=8200

# Integration URLs
HUB_URL=http://localhost:8001
NINJA_URL=http://localhost:8002
PORT_MANAGER_URL=http://localhost:8100

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_INTERVAL=60

# Deployment
DEFAULT_STRATEGY=docker_compose
DEFAULT_ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
